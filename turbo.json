{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build:docs": {
			"dependsOn": [
				"@xbanki-me/fetch-secure-blob#build",
				"^build:docs"
			],
			"outputs": [
				"dist/docs/*"
			]
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*"
			],
			"outputs": [
				"dist/*"
			]
		},
		"check-types": {
			"dependsOn": [
				"^check-types"
			]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	},
	"globalPassThroughEnv": [
		"BLOB_READ_WRITE_TOKEN"
	]
}
