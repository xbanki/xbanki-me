{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"overrides": [
		{
			"css": {
				"assist": {
					"enabled": false
				},
				"formatter": {
					"enabled": true,
					"indentStyle": "space",
					"indentWidth": 2,
					"lineWidth": 80,
					"quoteStyle": "double"
				},
				"parser": {
					"cssModules": true
				}
			},
			"formatter": {
				"formatWithErrors": true
			},
			"includes": [
				"**/*.css"
			]
		}
	],
	"root": false
}
