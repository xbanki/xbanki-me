{
	"$schema": "https://turbo.build/schema.json",
	"extends": [
		"//"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"build:docs",
				"build:lib"
			]
		},
		"build:docs": {
			"cache": true,
			"dependsOn": [
				"build:lib"
			],
			"outputs": [
				"dist/docs/**"
			]
		},
		"build:lib": {
			"cache": true,
			"env": [
				"BLOB_READ_WRITE_TOKEN"
			],
			"outputs": [
				"dist/lib/**"
			],
			"passThroughEnv": [
				"BLOB_READ_WRITE_TOKEN"
			]
		},
		"lint": {
			"cache": false,
			"dependsOn": [
				"^lint"
			]
		},
		"tidy": {
			"cache": false,
			"dependsOn": [
				"^tidy"
			]
		}
	}
}
